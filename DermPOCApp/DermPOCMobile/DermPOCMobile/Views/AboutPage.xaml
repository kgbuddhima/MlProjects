<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="DermPOCMobile.Views.AboutPage"
             xmlns:vm="clr-namespace:DermPOCMobile.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#2196F3</Color>
            <Color x:Key="Accent">#96d1ff</Color>
            <Color x:Key="LightTextColor">#999999</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--<StackLayout BackgroundColor="{StaticResource Accent}" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                <ContentView Padding="0,40,0,40" VerticalOptions="FillAndExpand">
                    <Image Source="xamarin_logo.png" VerticalOptions="Center" HeightRequest="64" />
                </ContentView>
            </StackLayout>
        </StackLayout>-->
        <ScrollView Grid.Row="1">
            <StackLayout Orientation="Vertical" Padding="16,40,16,40" Spacing="10">
                <Label FontSize="22">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="Dermatology app" FontAttributes="Bold" FontSize="22" />
                                <Span Text=" " />
                                <Span Text="Upload your image to predict" ForegroundColor="{StaticResource LightTextColor}" />
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label FontSize="22">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="Prediction " FontAttributes="Bold" FontSize="22" />
                                <Span Text=": " />
                                <Span Text="{Binding PredictedDisease}" TextColor="Blue"/>
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Image
                    x:Name="ImageView"
                    HorizontalOptions="FillAndExpand"
                    Aspect="AspectFit"
                    Source="{Binding DermImage}"/>

                <Button
                    x:Name="btnCrop"
                    Margin="0,10,0,0"
                    Text="Crop ImageCropper"
                    Clicked="btnCrop_Clicked"
                    BackgroundColor="{StaticResource Primary}"
                        TextColor="White" />
                
                <Button Margin="0,10,0,0" 
                        Text="Predict using API"
                        Command="{Binding PredictUsingApiCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" 
                        IsEnabled="{Binding IsNotProcessing}"/>

                <Button Margin="0,10,0,0" 
                        Text="Predict"
                        Command="{Binding PredictCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" />

                <ListView
                    Margin="10"
                    ItemsSource="{Binding PredictionList}"
                    HasUnevenRows="False">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding Label}" FontAttributes="Bold"/>
                                                <Span Text=" : "/>
                                                <Span Text="{Binding Score}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!--<Button Margin="0,10,0,0" Text="Learn more"
                        Command="{Binding OpenWebCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" />-->

                <!--<Button Margin="0,10,0,0" 
                        Text="Upload Image"
                        Command="{Binding UploadImageCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" />-->

                <!--<Label Text="Resize"/>
                <Button Margin="0,10,0,0" Text="Resize"
                        Command="{Binding ResizeImageCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" />-->

            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
